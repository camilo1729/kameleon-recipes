#!/usr/bin/env ruby

require 'kameleon'

argv = ARGV.dup
argv_extra = []
if idx = argv.index("--")
  argv_extra = argv.slice(idx+1, argv.length-2)
  argv = argv.slice(0, idx)
end

# Stdout/stderr should not buffer output
$stdout.sync = true
$stderr.sync = true

Kameleon::DEFAULT_RECIPES = File.expand_path(File.dirname(__FILE__) + "/../")

Kameleon::UI.main
